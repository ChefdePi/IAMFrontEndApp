<section class="banner">
  <div class="container">

    <!-- Hero composite wrapper -->
    <div class="hero-visual">
      <!-- 1. Background (twice as wide) -->
      <img
        src="/images/your-bg.png"
        alt="abstract Eld3rSec background"
        class="hero-bg">

      <!-- 2. Main old-people image -->
      <img
        src="/images/oldpplbball.png"
        alt="Residents playing basketball"
        class="hero-img">

      <!-- 3. Logo -->
      <img
        src="/images/eld3rsec-logo.png"
        alt="Eld3rSec logo"
        class="hero-logo">
    </div>

    <!-- your existing heading + text + button -->
    <h2>Welcome to the IAM System Prototype</h2>
    <p>A secure, scalable, and simple Identity and Access Management solution designed specifically for aged care environments.</p>

    <% if (user) { %>
      <a href="/dashboard" class="btn">Go to Dashboard</a>
    <% } else { %>
      <a href="/login" class="btn">Login / Register</a>
    <% } %>

  </div>
</section>
