<!-- views/complete-profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Complete Your Profile</title>
  <link rel="stylesheet" href="/styles.css"/>
</head>
<body>
  <header>
    <div class="container">
      <h1>SecureIAM</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/logout">Logout</a>
      </nav>
    </div>
  </header>

  <section class="main-content">
    <div class="container">
      <h2>Complete Your Profile</h2>

      <% if (error) { %>
        <div class="banner warn"><%= error %></div>
      <% } %>

      <form method="POST" action="/complete-profile">
        <p><strong>Email:</strong> <%= email %></p>

        <label>First Name:<br>
          <input type="text" name="firstName" value="<%= firstName %>" required>
        </label><br><br>

        <label>Last Name:<br>
          <input type="text" name="lastName" value="<%= lastName %>" required>
        </label><br><br>

        <label>Role:<br>
          <select name="role" required>
            <option value="">Select a role</option>
            <% roles.forEach(rn => { %>
              <option value="<%= rn %>" <%= role===rn?'selected':'' %>><%= rn %></option>
            <% }) %>
          </select>
        </label><br><br>

        <button type="submit" class="btn">Finish Registration</button>
      </form>
    </div>
  </section>

  <footer>
    <div class="container">
      <p>&copy; 2025 SecureIAM. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
